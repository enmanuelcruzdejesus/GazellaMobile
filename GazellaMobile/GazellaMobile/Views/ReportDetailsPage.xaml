<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GazellaMobile.Views.ReportDetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar x:Name="reportSearchBar"  TextChanged="reportSearchBar_TextChanged"/>
            <ListView x:Name="reportDetailsListView" ItemTapped="reportDetailsListView_ItemTapped" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding ProgramDescrip}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>