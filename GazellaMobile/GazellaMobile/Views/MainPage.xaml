<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GazellaMobile.Views"
             x:Class="GazellaMobile.Views.MainPage">
  <!--Pages can be added as references or inline-->



    <NavigationPage Title="Reportes" Icon="reports2img.png" Tint="{StaticResource bgColor}">
        <x:Arguments>
            <local:ReportsPage/>
        </x:Arguments>
    </NavigationPage>
    
    
    <NavigationPage Title="Autorizaciones" Icon="authorizationiconblack.png" Tint="{StaticResource bgColor}">
        <x:Arguments>
            <local:AuthorizationPage/>
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Configuracion" Icon="settingsiconblack.png" Tint="{StaticResource bgColor}">
        <x:Arguments>
            <local:SettingsPage/>
        </x:Arguments>
    </NavigationPage>


</TabbedPage>