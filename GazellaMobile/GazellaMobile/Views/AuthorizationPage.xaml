<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GazellaMobile.Views.AuthorizationPage"
             Title="Authorization">

    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="authorizationListView" RowHeight="100" ItemTapped="authorizationListView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Description}" Style="{StaticResource titleLabelStyle}"/>
                                <Label Text="{Binding RequestBy}"  Style="{StaticResource detailLabelSytle}"/>
                                <Label Text="{Binding RequestDate}" Style="{StaticResource moreDetailLabelSytle}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>